----------------------------------------------------
------------------ VISUALS TAB --------------------
----------------------------------------------------

local VisualsTab = Window:CreateTab("VISUALS", 10180536602)
local VisualsSection = VisualsTab:CreateSection("Visual Mods")

-- Highlights Toggle
VisualsTab:CreateToggle({
    Name = "Highlights",
    CurrentValue = false,
    SectionParent = VisualsSection,
    Flag = "HIGHLIGHTS_TOGGLE",
    Callback = function(v)
        local Players = game:GetService("Players")
        local plr = Players.LocalPlayer

        for i, target in pairs(Players:GetPlayers()) do
            if target ~= plr and target.Character then
                local highlight = target.Character:FindFirstChild("Highlight")
                if v then
                    if not highlight then
                        highlight = Instance.new("Highlight")
                        highlight.Name = "Highlight"
                        highlight.Adornee = target.Character
                        highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
                        highlight.FillColor = Color3.fromRGB(255, 0, 0)
                        highlight.Parent = target.Character
                    end
                else
                    if highlight then
                        highlight:Destroy()
                    end
                end
            end
        end
    end
})

-- Full Bright Toggle
VisualsTab:CreateToggle({
    Name = "Full Bright",
    CurrentValue = false,
    SectionParent = VisualsSection,
    Flag = "FULLBRIGHT_TOGGLE",
    Callback = function(v)
        local lighting = game:GetService("Lighting")
        if v then
            lighting.Ambient = Color3.new(1,1,1)
            lighting.Brightness = 2
            lighting.GlobalShadows = false
        else
            lighting.Ambient = Color3.fromRGB(128,128,128)
            lighting.Brightness = 1
            lighting.GlobalShadows = true
        end
    end
})

-- Remove Fog Toggle
VisualsTab:CreateToggle({
    Name = "Remove Fog",
    CurrentValue = false,
    SectionParent = VisualsSection,
    Flag = "REMOVEFOG_TOGGLE",
    Callback = function(v)
        local lighting = game:GetService("Lighting")
        if v then
            lighting.FogEnd = 100000
            lighting.FogStart = 0
        else
            lighting.FogEnd = 1000
            lighting.FogStart = 0
        end
    end
})
