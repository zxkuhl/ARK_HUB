local LocalTab = Window:CreateTab("LOCAL PLAYER", 10180536602)
local LPSection = LocalTab:CreateSection("Player Mods")

LocalTab:CreateSlider({
    Name = "Walk Speed",
    Range = {16, 200},
    Increment = 1,
    CurrentValue = 16,
    SectionParent = LPSection,
    Flag = "WALKSPEED",
    Callback = function(v)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v
    end
})

LocalTab:CreateSlider({
    Name = "Jump Power",
    Range = {50, 300},
    Increment = 1,
    CurrentValue = 50,
    SectionParent = LPSection,
    Flag = "JUMPPOWER",
    Callback = function(v)
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = v
    end
})

LocalTab:CreateToggle({
    Name = "God Mode",
    CurrentValue = false,
    SectionParent = LPSection,
    Flag = "GODMODE",
    Callback = function(v)
        local h = game.Players.LocalPlayer.Character.Humanoid
        if v then
            h.MaxHealth = math.huge
            h.Health = math.huge
        else
            h.MaxHealth = 100
            h.Health = 100
        end
    end
})

LocalTab:CreateButton({
    Name = "Infinite Jump",
    SectionParent = LPSection,
    Callback = function()
        loadstring(game:HttpGet("https://obj.wearedevs.net/2/scripts/Infinite%20Jump.lua"))()
    end
})

